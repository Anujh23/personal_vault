{
  "name": "dashboard",
  "version": "1.0.0",
  "description": "Personal Dashboard Desktop Application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "dev": "electron . --dev",
    "clean:data": "node scripts/clearDashboardData.js"
  },
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^38.1.2",
    "electron-builder": "^26.7.0",
    "electron-packager": "^17.1.2",
    "parcel": "^2.16.0",
    "vite": "^7.1.7"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "express": "^5.1.0"
  },
  "build": {
    "appId": "com.yourname.personal-dashboard",
    "productName": "Personal Dashboard",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "main.js",
      "preload.js",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "keywords": []
}
